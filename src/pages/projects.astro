    <style>
    body {
        text-align: center;
        font-family: 'Quicksand', sans-serif;
    }
    
    h1 {
        margin-top: 2%;
        font-weight: bold;
    }

    h2 {
        text-align: center;
        font-weight: 700;
        border-top: 0px solid #000;
        margin-top: 20px;
        margin-bottom: 2px;
        padding-bottom: 0.1%;
        position: relative;
    }

    h2:after {
        content: '';
        display: block;
        width: 96%;
        height: 1px;
        background: #000;
        position: absolute;
        left: 50%;
        top: 0;
        transform: translateX(-50%);
    }

    ul {
        margin-bottom: 2%;
        text-align: left;
        margin-left: 3%;
    }

    a {
        color: #a200ff;
    }

    .button {
        display: inline-block;
        padding: 5px 10px;
        background-color: #a200ff;
        color: rgb(255, 232, 232);
        text-align: center;
        border-radius: 100px;
        text-decoration: salmon;
        transition: background-color 0.3s ease, transfor 0.3s ease;
        margin-bottom: 2%;
        margin-right: 1%;
    }

    .button:hover {
        background-color: #3c00b3;
        transform: scale(0.95);
    }
      
      .projects-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* Creates a responsive number of columns */
        gap: 20px;
        padding: 20px;
        margin: 0 auto; /* Centers the grid horizontally */
      }

      .project-card {
        background: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease;
      }

      .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      }

      .project-image {
        width: 100%;
        height: 150px; /* Adjust height to fit smaller card size */
        object-fit: cover;
      }

      .project-info {
        padding: 10px;
      }

      .project-title {
        margin: 0;
        color: #333;
        font-size: 1.2em; /* Smaller font size for smaller card */
      }

      .project-description {
        color: #666;
        font-size: 0.9em; /* Smaller font size for smaller card */
      }

      /* ... [other styles if necessary] ... */
    </style>
  </head>

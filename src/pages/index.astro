        }

        .bottom-text {
            position: absolute;
            bottom: 0;
            text-align: center;
            margin-top: 20px;
        }

        #text-t {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            border-radius: 2px;
            border-color: bisque;
        }

        #text-bottom {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            border-radius: 2px;
            border-color: bisque;
            margin-bottom: 2%;
        }

        .bottom-text > a {
            margin-bottom: 10px;
        }

        .button {
            display: inline-block;
            padding: 5px 10px;
            background-color: #a200ff;
            color: rgb(255, 232, 232);
            text-align: center;
            border-radius: 100px;
            transition: background-color 0.3s ease, transfor 0.3s ease;
        }

        .button:hover {
            background-color: #3c00b3;
            transform: scale(0.95);
        }

        h1 {
            font-weight: lighter;
            font-size: xx-large;
        }

        h2 {
            font-weight: bold;
            font-size: large;
            margin-top: 2%;
        }

        h3 {
            text-align: center;
            font-weight: bold;
            grid-column: span 2;
        }

        div{
            width: 100%;
            font-size: 16px;
            line-height: 1.5;
        }

        #contact{
            background-color: #d1d5db;
            margin-top: auto;
            padding-bottom: 1%;
            margin-bottom: 0%;
        }

        .centered-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            margin-top: 1em;
        }

        .my-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            max-width: 650px;
            margin: 0 auto;
            padding-top: 1%;
        }

        .rounded-image {
            max-width: 16em;
            max-height: 20em;
            border-radius: 10px;
            object-fit: contain;
            margin: 1%;
        }

        .image-container {
            display: grid;
            grid-template-columns: 1fr 2fr 1fr;
            align-items: center;
            gap: 20px;
            margin: auto;
            max-width: 1000px;
        }

        .top-image {
            max-width: 100%; 
            height: auto; 
            margin: 10px 0; 
        }

        .text-container {
            background-color: rgba(82, 84, 86, 0.05);
            color: black;
            padding: 20px;
            border-radius: 10px;
        }

        .main-text {
            font-size: large;
            font-weight: lighter;
        }

        @media (max-width: 768px) {
            .image-container {
                grid-template-areas:
                "leftImage rightImage"
                "text text";
                grid-template-columns: 1fr 1fr;
            }

            .rounded-image, .image-container {
                width: 100%;
                padding: 10px;
                border-radius: 10px;
            }

            .my-grid {
                grid-template-columns: 1fr;
            }

            .centered-container, .my-grid {
                padding-left: 10%;
                padding-right: 10%;
            }
        }

    </style>

</head>
